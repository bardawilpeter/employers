{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "callable-types": true,
    "class-name": true,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-console": false,
    "curly": true,
    "eofline": true,
    "@typescript-eslint/no-inferrable-types": [
      "warn",
      {
        "ignoreParameters": true
      }
    ]
  }
}
